{
    "name": "momo-chat",
    "version": "1.0.0",
    "private": true,
    "author": "shiy2008@gmail.com",
    "homepage": "https://github.com/Akagilnc/momo-web#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akagilnc/momo-web.git"
    },
    "bugs": {
        "url": "https://github.com/Akagilnc/momo-web/issues"
    },
    "dependencies": {
        "boot-cell": "^1.0.1",
        "bootstrap-icons": "^1.0.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.0",
        "classnames": "^2.2.6",
        "koajax": "^0.6.2",
        "mobx": "^5.15.6",
        "mobx-web-cell": "^0.3.2",
        "web-cell": "^2.2.0",
        "web-utility": "^1.8.0"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.10",
        "autoprefixer": "^9.8.6",
        "husky": "^4.2.5",
        "less": "^3.12.2",
        "lint-staged": "^10.3.0",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.1.1",
        "typescript": "^4.0.2"
    },
    "scripts": {
        "clean": "rm -rf .cache/ dist/",
        "start": "npm run clean  &&  parcel source/index.html --open",
        "build": "npm run clean  &&  parcel build source/index.html --public-url .",
        "test": "lint-staged"
    },
    "lint-staged": {
        "*.{html,md,less,js,ts,tsx,json,yml}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    }
}
