    "homepage": "https://github.com/Akagilnc/momo-web#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akagilnc/momo-web.git"
    },
    "bugs": {
        "url": "https://github.com/Akagilnc/momo-web/issues"
    },
    "dependencies": {
        "cell-router": "^2.0.0-beta.4",
        "mobx": "^5.14.0",
        "mobx-web-cell": "^0.1.1",
        "web-cell": "^2.0.0-beta.1"
    },
    "devDependencies": {
        "husky": "^3.0.8",
        "lint-staged": "^9.4.1",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.18.2",
        "typescript": "^3.6.3"
    },
    "scripts": {
        "clean": "rm -rf .cache/ dist/",
        "start": "npm run clean  &&  parcel source/index.html",
        "build": "npm run clean  &&  parcel build source/index.html",
        "test": "lint-staged"
    },
    "lint-staged": {
        "*.{html,md,js,json,ts,tsx}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    }
}
