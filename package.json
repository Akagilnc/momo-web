{
    "name": "momo-chat",
    "version": "0.8.0",
    "private": true,
    "author": "shiy2008@gmail.com",
    "homepage": "https://github.com/Akagilnc/momo-web#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akagilnc/momo-web.git"
    },
    "bugs": {
        "url": "https://github.com/Akagilnc/momo-web/issues"
    },
    "dependencies": {
        "boot-cell": "^0.15.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.0-rc.2",
        "classnames": "^2.2.6",
        "koajax": "^0.3.3",
        "mobx": "^5.15.0",
        "mobx-web-cell": "^0.2.4",
        "web-cell": "^2.0.0-rc.5"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.9",
        "@types/lodash.memoize": "^4.1.6",
        "autoprefixer": "^9.7.3",
        "husky": "^3.1.0",
        "less": "^3.10.3",
        "lint-staged": "^9.5.0",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^1.4.1",
        "prettier": "^1.19.1",
        "typescript": "^3.7.3"
    },
    "scripts": {
        "clean": "rm -rf .cache/ dist/",
        "start": "npm run clean  &&  parcel source/index.html",
        "build": "npm run clean  &&  parcel build source/index.html --public-url .",
        "test": "lint-staged"
    },
    "lint-staged": {
        "*.{html,md,less,js,ts,tsx,json,yml}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    }
}
